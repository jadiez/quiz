<table>
<tr>
	<th>
		<form action="/quizes"+search method="get">
			<input type="text" name="search" placeholder="Categoria o Pregunta"></input>
			<input type="submit" value="Filtrar">
		</form>
	</th>
	<th colspan="2">
	  <% if (session.user) { %>
		<a href="/quizes/new"><button type="button">Crear Pregunta</button></a>
	  <% } %>
	</th>
</tr>
<% var i; for(i=0; i<quizes.length; i++) { %>
<tr>
	<td><a href="quizes/<%=quizes[i].id %>"><%= quizes[i].pregunta %>  (<%= quizes[i].tema %>)</a></td>
	<% if (session.user) { %>
	<td><a href="quizes/<%=quizes[i].id %>/editar"><button type="button">Editar</button>
	<td>
	<form method="post" action="/quizes/<%=quizes[i].id%>?_method=delete">
		<button type="submit" onClick="return confirm('Â¿Borrar pregunta: [<%=quizes[i].pregunta%>] ?')">
			Borrar
		</button>
	</form>
	<% } %>
</tr>

<% } %>

</table>
 
